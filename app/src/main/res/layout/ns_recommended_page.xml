<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@mipmap/img_home_page_bg"
    android:id="@+id/main">


    <include
        android:id="@+id/head_page"
        layout="@layout/ns_head_page" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recommended_page_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:visibility="visible"
        tools:itemCount="10"
        tools:listitem="@layout/ns_item_recommended_page"/>

    <com.ping.night.story.admob.view.CustomNativeAdView
        android:id="@+id/recommended_page_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>