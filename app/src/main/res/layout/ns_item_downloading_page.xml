<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@mipmap/img_downloading_item_bg">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@android:color/transparent">

        <ImageView
            android:id="@+id/item_downloading_page_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <com.ping.night.story.admob.view.CustomProgressBar
            android:id="@+id/item_downloading_page_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <ImageView
            android:id="@+id/item_downloading_page_status"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:src="@mipmap/img_item_downloading_page_stop"/>



        <TextView
            android:id="@+id/item_downloading_page_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:text="Paused"
            android:layout_gravity="center_horizontal|bottom"/>


    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/item_downloading_page_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#333333"
            android:textStyle="bold"
            tools:text="VIDEO TITLE"
            android:maxLines="1"
            android:ellipsize="end"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="0dp" />


        <ImageView
            android:id="@+id/item_downloading_page_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/img_item_downloading_page_close"/>

    </LinearLayout>



</LinearLayout>