<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <FrameLayout
            android:id="@+id/media_card_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/native_media_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />



            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:layout_margin="16dp"
                android:background="@drawable/shape_ad_countdown_bg">

                <TextView
                    android:id="@+id/show_countdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    tools:text="5s"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"/>

                <ImageView
                    android:id="@+id/image_close"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:src="@mipmap/ic_full_ad_close"/>

            </FrameLayout>



        </FrameLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="43dp"/>

        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="36dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/native_ad_action">

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/native_logo_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="ContentDescription" />

            </androidx.cardview.widget.CardView>



            <TextView
                android:id="@+id/native_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto"
                android:maxLines="1"
                android:textColor="#1F1F1F"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="alshdliahsldhklas"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_ad_logo1"
                tools:ignore="ContentDescription" />


        </LinearLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="9dp"/>

        <TextView
            android:id="@+id/native_desc_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:maxLines="3"
            android:textColor="#1F1F1F"
            android:textSize="14sp"
            android:gravity="center"
            tools:text="Capture Every charming momentCapture Every
charmingmomentCaptureEverymomentCaptureEvery charming moment......"/>


        <Space
            android:layout_width="match_parent"
            android:layout_height="36dp"/>




        <TextView
            android:id="@+id/native_ad_action"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginHorizontal="38dp"
            android:background="@drawable/shape_native_ad_big_btn_bg"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp"/>


    </LinearLayout>

</com.google.android.gms.ads.nativead.NativeAdView>